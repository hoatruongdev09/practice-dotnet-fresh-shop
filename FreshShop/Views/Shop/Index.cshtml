                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3>Categories</h3>
                        </div>
                        <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men"
                            data-children=".sub-men">
                            @{
                                foreach (var category in listCategory)
                                {
                                    if (category.SubCategory != null)
                                    {
                                        CreateCategoryWithSubCategory(category);
                                    }
                                    else
                                    {
                                        CreateCategory(category);
                                    }
                                }
                            }
                            @{
                                void CreateCategoryWithSubCategory(CategoriesModel category)
                                {
                                    <div class="list-group-collapse sub-men">
                                        <a class="list-group-item list-group-item-action" href="#sub-men1"
                                            data-toggle="collapse" aria-expanded="true" aria-controls="sub-men1">@category.Name
                                            <small class="text-muted">(@category.ProductCount)</small>
                                        </a>
                                        <div class="collapse show" id="sub-men1" data-parent="#list-group-men">
                                            <div class="list-group">
                                                @foreach (var item in category.SubCategory)
                                                {
                                                    <a href="#" class="list-group-item list-group-item-action active">@item.Name
                                                        <small class="text-muted">(@item.ProductCount)</small></a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                                void CreateCategory(CategoriesModel category)
                                {
                                    <a href="#" class="list-group-item list-group-item-action"> @category.Name <small
                                            class="text-muted">(@category.ProductCount) </small></a>
                                }
                            }
